{
    "name": "inpsyde/wp-tests-starter",
    "description": "A package that helps you setting up WordPress integration test environments quickly.",
    "keywords": [
        "WordPress",
        "Tests",
        "Integration tests"
    ],
    "license": "gpl-2.0-or-later",
    "authors": [
        {
            "name": "David Naber",
            "email": "d.naber@inpsyde.com",
            "role": "Developer"
        }
    ],
    "suggest": {
        "inpsyde/wordpress-dev": "WordPress development composer package."
    },
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "inpsyde/wordpress-dev": "dev-master",
        "inpsyde/php-coding-standards": "^1.0",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "WpTestsStarter\\": "src/WpTestsStarter"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
