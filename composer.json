{
    "name": "inpsyde/wp-tests-starter",
    "description": "A package that helps you setting up WordPress integration test environments quickly.",
    "keywords": [
        "WordPress",
        "Tests",
        "Integration tests"
    ],
    "license": "gpl-2.0-or-later",
    "authors": [
        {
            "name": "David Naber",
            "email": "d.naber@inpsyde.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "inpsyde/php-coding-standards": "^1.0",
        "phpunit/phpunit": "^9.5",
        "wordpress/wordpress": "^6.0",
        "yoast/phpunit-polyfills": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Inpsyde\\WpTestsStarter\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/WordPress/wordpress-develop"
        }
    ]
}
